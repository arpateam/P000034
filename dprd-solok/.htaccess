## Turn on rewrite engine
RewriteEngine on
Options -Indexes +FollowSymLinks

# Remove trailing slash from non-filepath urls
#RewriteCond %{REQUEST_URI} /(.+)/$
#RewriteCond %{REQUEST_FILENAME} !-d
#RewriteRule ^ https://www.dipahat.my.id/%1 [R=301,L]

# Include trailing slash on directory 
#RewriteCond %{REQUEST_URI} !(.+)/$
#RewriteCond %{REQUEST_FILENAME} -d
#RewriteRule ^(.+)$ https://www.dipahat.my.id/$1/ [R=301,L]

# Force HTTPS and WWW 
#RewriteCond %{HTTP_HOST} !^www\.(.*)$ [OR,NC]
#RewriteCond %{https} off  
#RewriteRule ^(.*)$ https://www.dipahat.my.id/$1 [R=301,L]

# Handle my links
RewriteRule ^$ template.php?module=beranda&id=1 [L]
RewriteRule ^beranda$ template.php?module=beranda&id=1 [L]

RewriteRule ^diagnosis-penyakit$ template.php?module=diagnosis-penyakit&id=2 [L]

RewriteRule ^konsultasi$ template.php?module=konsultasi&id=3 [L]
RewriteRule ^addKonsultasi$ appweb/Controllers/Konsultasi.php [L]

RewriteRule ^bantuan$ template.php?module=bantuan&id=4 [L]

RewriteRule ^akun$ template.php?module=akun&id=5 [L]
RewriteRule ^daftarAkun$ appweb/Controllers/Akun.php?act=add-akun [L]
RewriteRule ^masukAkun$ appweb/Controllers/Akun.php?act=login-akun [L]
RewriteRule ^keluarAkun$ appweb/Controllers/Akun.php?act=logout-akun [L]

RewriteRule ^404$ appweb/Views/404.php [L]
RewriteRule ^403$ appweb/Views/403.php [L]
RewriteRule ^500$ appweb/Views/500.php [L]
RewriteRule ^400$ appweb/Views/400.php [L]
RewriteRule ^401$ appweb/Views/401.php [L]

##### Deny access to htaccess ###############################
<files .htaccess>
    order allow,deny
    deny from all
</files>

##### Not Found ###############################
ErrorDocument 404 /appweb/Views/404.php
##### Forbidden ###############################
ErrorDocument 403 /appweb/Views/403.php
##### Internal Server Error
ErrorDocument 500 /appweb/Views/500.php
##### Bad Request ###############################
ErrorDocument 400 /appweb/Views/400.php
##### Unauthorised ###############################
ErrorDocument 401 /appweb/Views/401.php